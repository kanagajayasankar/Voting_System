<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>        
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>india21.logic.i18n.strings</base-name>
            <var>strings</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>publicresult</from-outcome>
            <to-view-id>/pages/shared/results.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/pages/index.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>vote</from-outcome>
            <to-view-id>/pages/participant/vote.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>votecanceled</from-outcome>
            <to-view-id>/pages/participant/canceled.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>itemdetails</from-outcome>
            <to-view-id>/pages/organizer/questionList.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>participant-list</from-outcome>
            <to-view-id>/pages/organizer/participant-list.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>poll-results</from-outcome>
            <to-view-id>/pages/organizer/poll-results.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>polls</from-outcome>
            <to-view-id>/pages/organizer/polls.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>preview</from-outcome>
            <to-view-id>/pages/organizer/preview.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
